# Valdrix Environment Configuration
# Copy this file to .env and fill in your values

# App Configuration
DEBUG=False
APP_NAME="Valdrix"

# AWS Credentials (optional - Valdrix uses STS AssumeRole primarily)
AWS_DEFAULT_REGION=us-east-1

# LLM Provider (options: openai, claude, google, groq)
LLM_PROVIDER=groq

# LLM API Keys (provide at least one)
OPENAI_API_KEY=
CLAUDE_API_KEY=
GOOGLE_API_KEY=
GROQ_API_KEY=

# Scheduler Configuration
SCHEDULER_HOUR=8
SCHEDULER_MINUTE=0

# Database (Neon PostgreSQL)
# NOTE: Async SQLAlchemy needs 'postgresql+asyncpg://' scheme
DATABASE_URL=postgresql+asyncpg://user:password@host/database

# Supabase Auth
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# Slack Integration (optional)
SLACK_BOT_TOKEN=
SLACK_CHANNEL_ID=

# Encryption (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=

# SMTP Email (optional - for carbon alerts)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Admin API Key (for /admin endpoints)
ADMIN_API_KEY=
